datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int           @id @default(autoincrement())
  email     String        @unique
  password  String
  profiles  UserProfile[]
}

model UserProfile {
  id          Int      @id @default(autoincrement())
  firstName   String
  lastName    String
  birthDate   DateTime
  photo       String?
  description String
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
}
